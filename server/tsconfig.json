{
	"compilerOptions": {
		"target": "es6",
		"lib": ["es2015"],
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"outDir": "build"
	},
	"include": [
		"src"
  ]
}
